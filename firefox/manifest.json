{
  "name":  "Forget that page",
  "short_name": "Forget that page",
  "version": "1.3.0.1",
  "version_name": "1.3.0.1",
  "author": "Cyril Weller",
  "description": "Delete history, local and session storage for the current webpage, just with one click ! Available in 20+ different languages.",

  "manifest_version": 2,
  "default_locale":"en",

  "browser_action": {
    "default_title": "Forget that page",
    "default_icon": "img/icon/swipe512.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "img/icon/swipe16.png",
    "24": "img/icon/swipe24.png",
    "32": "img/icon/swipe32.png",
    "64": "img/icon/swipe64.png",
    "128": "img/icon/swipe128.png",
    "256": "img/icon/swipe256.png",
    "512": "img/icon/swipe512.png"
  },

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "permissions": [
    "history",
    "tabs",
    "activeTab"
  ],

  "applications": {
  "gecko": {
    "id": "forgetthatpage@firefox"
    }
  }

}
